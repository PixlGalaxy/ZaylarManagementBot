{
    "name": "zaylar-management-bot",
    "version": "1.1.0",
    "description": "A Discord bot that schedules and sends maintenance announcements with a simple UI.",
    "main": "dist/index.js",
    "scripts": {
        "start": "node dist/index.js",
        "dev": "ts-node-dev --respawn src/index.ts",
        "build": "tsc",
        "build:css": "npx tailwindcss -i ./src/public/tailwind.css -o ./public/css/tailwind.css --watch"
    },
    "dependencies": {
        "discord.js": "^14.11.0",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "node-schedule": "^2.1.1"
    },
    "devDependencies": {
        "@types/express": "^4.17.15",
        "@types/node": "^18.15.13",
        "@types/node-schedule": "^2.0.0",
        "autoprefixer": "^10.4.20",
        "postcss": "^8.5.3",
        "tailwindcss": "^3.3.3",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.8.2"
    }
}
